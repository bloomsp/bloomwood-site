---
const pathname = Astro.url?.pathname ?? '';
const isMedia = pathname === '/media/' || pathname.startsWith('/media/');

const links = isMedia
  ? [
      { href: '/media/about/privacy-policy/', label: 'Privacy' },
      { href: '/media/about/cookie-policy/', label: 'Cookies' },
      { href: '/media/about/website-terms-and-conditions-of-use/', label: 'Website Usage' },
      { href: '/media/about/terms-conditions/', label: 'Services Terms' },
    ]
  : [
      { href: '/solutions/about/privacy-policy/', label: 'Privacy' },
      { href: '/solutions/about/cookie-policy/', label: 'Cookies' },
      { href: '/solutions/about/website-terms-of-use/', label: 'Website Usage' },
      { href: '/solutions/about/terms-conditions/', label: 'Services Terms' },
    ];
---

<footer class="border-t border-slate-200">
  <div class="mx-auto max-w-5xl px-4 py-10 text-sm text-slate-600">
    <div class="flex flex-col gap-2 md:flex-row md:items-center md:justify-between">
      <p>&copy; {new Date().getFullYear()} Bloomwood Solutions</p>
      <div class="flex flex-wrap gap-x-4 gap-y-2">
        {links.map((l) => (
          <a class="hover:text-slate-950" href={l.href}>{l.label}</a>
        ))}
      </div>
    </div>
  </div>
</footer>
