---
const nav = [
  { href: '/', label: 'Home' },
  { href: '/about/', label: 'About' },
  { href: '/bookings/', label: 'Bookings' },
  { href: '/service-packs/', label: 'Service Packs' },
  { href: '/service-area/', label: 'Service Area' },
  { href: '/blog/', label: 'Blog' },
  { href: '/kb/', label: 'Knowledge Base' },
];
---

<header class="border-b border-slate-200">
  <div class="mx-auto flex max-w-5xl items-center justify-between gap-6 px-4 py-4">
    <a href="/" class="flex items-center gap-3">
      <img src="/logo.svg" alt="Bloomwood Solutions" class="h-10 w-auto" loading="eager" />
      <span class="text-lg font-semibold">Bloomwood Solutions</span>
    </a>
    <nav class="hidden items-center gap-4 md:flex">
      {nav.map((i) => (
        <a class="text-sm text-slate-700 hover:text-slate-950" href={i.href}>{i.label}</a>
      ))}
    </nav>
  </div>
</header>
