---
import '../styles/global.css';
import Schema from '../components/Schema.astro';

export interface Props {
  title: string;
  siteName?: string;
  description?: string;
  canonicalUrl?: URL;
  ogImage?: string;
  /** JSON-LD schema object(s) */
  jsonLd?: Record<string, any> | Array<Record<string, any>>;
}

const { title, siteName = 'Bloomwood', description, canonicalUrl, ogImage, jsonLd } = Astro.props;

const fullTitle = title === siteName ? siteName : `${title} | ${siteName}`;
const canonical = canonicalUrl ?? new URL(Astro.url.pathname, Astro.site ?? Astro.url);
const defaultOgImage = '/images/solutions/Bloomwood-Solutions-gslogo-512.png';
const og = new URL(ogImage ?? defaultOgImage, Astro.site ?? Astro.url).toString();

/**
 * Tawk.to loading toggle
 * - Default: enabled in production, disabled in dev.
 * - Override with env var: TAWK_ENABLED=true|false
 * - Runtime override with URL param: ?tawk=1 (enable) / ?tawk=0 (disable)
 *   (we also persist it to localStorage).
 */
const envTawk = import.meta.env.TAWK_ENABLED;
const enableTawkByDefault = envTawk
  ? envTawk === 'true'
  : import.meta.env.PROD;
---
<!doctype html>
<html lang="en">
  <head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />

    <!-- Raleway for Bloomwood Solutions heading -->
    <link rel="preconnect" href="https://fonts.googleapis.com" />
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />
    <link
      rel="stylesheet"
      href="https://fonts.googleapis.com/css2?family=Raleway:wght@600;700&display=swap"
    />

    {/* Apply theme as early as possible to avoid a flash of incorrect theme. */}
    <script is:inline>
      (function () {
        try {
          var key = 'theme';
          // Default to light mode so the site remains readable even when the OS/browser is in dark mode.
          // Users can still opt into 'dark' (or 'system') by setting localStorage.theme.
          var theme = localStorage.getItem(key) || 'light';
          var root = document.documentElement;

          root.classList.remove('dark');

          var prefersDark = window.matchMedia && window.matchMedia('(prefers-color-scheme: dark)').matches;

          if (theme === 'dark' || (theme === 'system' && prefersDark)) {
            root.classList.add('dark');
            root.style.colorScheme = 'dark';
          } else {
            root.style.colorScheme = 'light';
          }
        } catch (e) {
          // ignore
        }
      })();
    </script>

    <title>{fullTitle}</title>
    {description && <meta name="description" content={description} />}
    <link rel="canonical" href={canonical.toString()} />

    <meta property="og:site_name" content={siteName} />
    <meta property="og:locale" content="en_AU" />
    <meta property="og:title" content={fullTitle} />
    {description && <meta property="og:description" content={description} />}
    <meta property="og:type" content="website" />
    <meta property="og:url" content={canonical.toString()} />
    <meta property="og:image" content={og} />

    <meta name="twitter:card" content="summary_large_image" />
    <meta name="twitter:title" content={fullTitle} />
    {description && <meta name="twitter:description" content={description} />}
    <meta name="twitter:image" content={og} />

    <Schema jsonLd={jsonLd} />

    <!-- Start cookieyes banner -->
    <script
      id="cookieyes"
      type="text/javascript"
      src="https://cdn-cookieyes.com/client_data/e7abd98f2e74bd76f22e4144/script.js"
    ></script>
    <!-- End cookieyes banner -->

    <slot name="head" />
  </head>
  <body class="min-h-dvh bg-background text-foreground">
    <slot />


    <!--Start of Tawk.to Script (conditionally loaded)-->
    <script is:inline define:vars={{ defaultEnabled: enableTawkByDefault }}>
      (function () {
        try {

          // URL override: ?tawk=1 / ?tawk=0
          var params = new URLSearchParams(window.location.search);
          var qp = params.get('tawk');
          if (qp === '1' || qp === '0') {
            localStorage.setItem('tawk:enabled', qp);
          }

          var stored = localStorage.getItem('tawk:enabled');
          var enabled = stored === null ? defaultEnabled : stored === '1';
          if (!enabled) return;

          // Load Tawk
          window.Tawk_API = window.Tawk_API || {};
          window.Tawk_LoadStart = new Date();
          var s1 = document.createElement('script');
          var s0 = document.getElementsByTagName('script')[0];
          s1.async = true;
          s1.src = 'https://embed.tawk.to/68a2f3cfd8c4f119281983d9/1j2u8gole';
          s1.charset = 'UTF-8';
          // Use a valid CORS mode for cross-origin script loads.
          // `*` is not a valid value for the `crossorigin` attribute and can trigger CORS errors.
          s1.crossOrigin = 'anonymous';
          s0.parentNode.insertBefore(s1, s0);
        } catch (e) {
          // ignore
        }
      })();
    </script>
    <!--End of Tawk.to Script-->
  </body>
</html>
