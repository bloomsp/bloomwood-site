---
import '../styles/global.css';

export interface Props {
  title: string;
  siteName?: string;
  description?: string;
  canonicalUrl?: URL;
  ogImage?: string;
}

const { title, siteName = 'Bloomwood', description, canonicalUrl, ogImage } = Astro.props;

const fullTitle = title === siteName ? siteName : `${title} | ${siteName}`;
const canonical = canonicalUrl ?? new URL(Astro.url.pathname, Astro.site ?? Astro.url);
const og = ogImage ? new URL(ogImage, Astro.site ?? Astro.url).toString() : undefined;
---
<!doctype html>
<html lang="en">
  <head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />

    <!-- Raleway for Bloomwood Solutions heading -->
    <link rel="preconnect" href="https://fonts.googleapis.com" />
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />
    <link
      rel="stylesheet"
      href="https://fonts.googleapis.com/css2?family=Raleway:wght@600;700&display=swap"
    />

    {/* Apply theme as early as possible to avoid a flash of incorrect theme. */}
    <script is:inline>
      (function () {
        try {
          var key = 'theme';
          var theme = localStorage.getItem(key) || 'system';
          var root = document.documentElement;

          root.classList.remove('dark');

          var prefersDark = window.matchMedia && window.matchMedia('(prefers-color-scheme: dark)').matches;

          if (theme === 'dark' || (theme === 'system' && prefersDark)) {
            root.classList.add('dark');
            root.style.colorScheme = 'dark';
          } else {
            root.style.colorScheme = 'light';
          }
        } catch (e) {
          // ignore
        }
      })();
    </script>

    <title>{fullTitle}</title>
    {description && <meta name="description" content={description} />}
    <link rel="canonical" href={canonical.toString()} />

    <meta property="og:site_name" content={siteName} />
    <meta property="og:title" content={fullTitle} />
    {description && <meta property="og:description" content={description} />}
    <meta property="og:type" content="website" />
    <meta property="og:url" content={canonical.toString()} />
    {og && <meta property="og:image" content={og} />}

    <meta name="twitter:card" content="summary_large_image" />
    <meta name="twitter:title" content={fullTitle} />
    {description && <meta name="twitter:description" content={description} />}
    {og && <meta name="twitter:image" content={og} />}

    <slot name="head" />
  </head>
  <body class="min-h-dvh bg-background text-foreground">
    <slot />

    <!--Start of Tawk.to Script-->
    <script is:inline type="text/javascript">
      var Tawk_API = Tawk_API || {},
        Tawk_LoadStart = new Date();
      (function () {
        var s1 = document.createElement('script'),
          s0 = document.getElementsByTagName('script')[0];
        s1.async = true;
        s1.src = 'https://embed.tawk.to/68a2f3cfd8c4f119281983d9/1j2u8gole';
        s1.charset = 'UTF-8';
        s1.setAttribute('crossorigin', '*');
        s0.parentNode.insertBefore(s1, s0);
      })();
    </script>
    <!--End of Tawk.to Script-->
  </body>
</html>
