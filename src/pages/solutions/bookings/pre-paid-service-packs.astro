---
import PageLayout from '../../../layouts/PageLayout.astro';
import { getEntryBySlug } from 'astro:content';
import { ServicePacks } from '../../../components/ServicePacks';

export const prerender = true;

const entry = await getEntryBySlug('pages', 'solutions/bookings/pre-paid-service-packs');
if (!entry) throw new Error('Missing content entry: solutions/bookings/pre-paid-service-packs');

const { Content } = await entry.render();
const data = entry.data;
---

<PageLayout title={data.title} description={data.description} ogImage={data.ogImage}>
  <Content />

  <div class="not-prose mt-8">
    <ServicePacks client:load />
  </div>

  <section class="prose prose-slate mt-10 max-w-none">
    <h2>Billing Increments</h2>
    <ul>
      <li>Remote support billed in 15-minute increments</li>
      <li>Onsite support billed in 30-minute increments</li>
    </ul>

    <h2>Terms &amp; Conditions</h2>
    <ol>
      <li>Packs valid for 12 months from purchase.</li>
      <li>Non-refundable and non-transferable without approval from Bloomwood Solutions.</li>
      <li>Travel surcharges apply outside 80 km from Cairns.</li>
      <li>Hours may be used for onsite or remote work, billed by the increments above.</li>
      <li>Unused hours expire at the end of the validity period.</li>
      <li>Price includes GST.</li>
      <li>Savings depend on your mix of onsite vs remote hours used.</li>
    </ol>
  </section>
</PageLayout>
